<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#121212">

    <LinearLayout
        android:id="@+id/clipboard_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone" 
        android:background="#222222">

        <TextView
            android:id="@+id/clipboard_preview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btn_paste"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Paste"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#3498db" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Clear"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#e74c3c" />
    </LinearLayout>
    
    <LinearLayout
	android:id="@+id/settings_panel"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="12dp"
	android:visibility="gone"
	android:background="#222222">

	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Thorn Settings"
	    android:textColor="#3498db"
	    android:textStyle="bold"
	    android:layout_marginBottom="8dp"/>

	<Switch
	    android:id="@+id/switch_thorn_side"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Thorn on Right Side"
	    android:textColor="#FFFFFF"
	    android:padding="8dp"/>

	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Select Thorn Variant:"
	    android:textColor="#AAAAAA"
	    android:textSize="12sp"
	    android:layout_marginTop="8dp"/>

	<RadioGroup
	    android:id="@+id/radio_thorn_type"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <RadioButton android:id="@+id/radio_þ" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="þ" android:textColor="#FFFFFF"/>
	    <RadioButton android:id="@+id/radio_th" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ð" android:textColor="#FFFFFF" android:layout_marginStart="20dp"/>
	</RadioGroup>

	<Switch
	    android:id="@+id/switch_vibrate"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Vibrate on Keypress"
	    android:textColor="#FFFFFF"
	    android:padding="8dp"
	    android:layout_marginTop="8dp"/>

	<Button
	    android:id="@+id/btn_close_settings"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Done"
	    android:layout_gravity="end"
	    style="?android:attr/borderlessButtonStyle"
	    android:textColor="#3498db"/>
    </LinearLayout>

    <com.example.keyboard.LatinKeyboardView
	android:id="@+id/keyboard_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:keyBackground="@drawable/key_bg"
	android:keyTextColor="#FFFFFF"
	android:keyTextSize="18sp"
	android:labelTextSize="14sp"
	android:keyPreviewLayout="@null"
	android:popupLayout="@layout/popup_layer" />
</LinearLayout>
