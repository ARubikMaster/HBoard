<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainerLowest">

    <LinearLayout
        android:id="@+id/clipboard_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone"
        android:background="?attr/colorSurfaceContainerHigh"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/clipboard_preview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btn_paste"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Paste"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorPrimary" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Clear"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorError" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="?attr/colorSurfaceContainerHigh">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keyboard Settings"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <Switch
            android:id="@+id/switch_thorn_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thorn on Right Side"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radio_thorn_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp">
            <RadioButton android:id="@+id/radio_þ" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="þ" />
            <RadioButton android:id="@+id/radio_th" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ð" android:layout_marginStart="24dp"/>
        </RadioGroup>

        <Switch
            android:id="@+id/switch_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibrate on Keypress"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_close_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="end"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <com.example.keyboard.LatinKeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="260dp"
        android:keyBackground="@drawable/key_bg"
        android:keyTextColor="?attr/colorOnSurface"
        android:keyTextSize="20sp"
        android:labelTextSize="14sp"
        android:keyPreviewLayout="@null"
        android:paddingBottom="4dp"
        android:popupLayout="@layout/popup_layer" />

</LinearLayout>
